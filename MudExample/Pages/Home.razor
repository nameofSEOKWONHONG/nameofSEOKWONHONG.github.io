                    </MudTimelineItem>
                    <MudTimelineItem Color="Color.Success" Size="Size.Small">
                        <ItemOpposite>
                            <MudText Color="Color.Success" Typo="Typo.h5">@Localizer["LBL0031"]</MudText>
                        </ItemOpposite>
                        <ItemContent>
                            <MudText Color="Color.Success" Typo="Typo.h6" GutterBottom="true">
